    <!-- Supabase + Interaction Script -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2.39.5/dist/umd/supabase.min.js"></script>
    <script>
        const SUPABASE_URL = "https://jicytgdlbevccejowlnf.supabase.co";
        const SUPABASE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImppY3l0Z2RsYmV2Y2Nlam93bG5mIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDUzNDQzNTYsImV4cCI6MjA2MDkyMDM1Nn0.DRfZefUPOLjhdxYudhvQKGePr6ex-Xf3JBkedbF7_OY";
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        const slides = document.querySelectorAll('.slide');
        let current = 0;
        let slidesUnlocked = false;

        function updateSlides() {
            slides.forEach((slide, index) => {
                slide.classList.remove('active', 'previous');
                if (index === current) {
                    slide.classList.add('active');
                } else if (index < current) {
                    slide.classList.add('previous');
                }
            });
            document.getElementById('indicator').innerText = `Slide ${current + 1} of ${slides.length}`;
        }

        async function unlockSlides(email) {
            const valid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            if (!valid) {
                alert('Please enter a valid email address.');
                return;
            }

            try {
                const { error } = await supabase.from('investors').insert([{ email }]);
                if (error) throw error;

                slidesUnlocked = true;
                current++;
                updateSlides();
            } catch (err) {
                console.error('Error inserting email:', err.message);
                alert('There was a problem saving your email. Please try again later.');
            }
        }

        document.getElementById('emailForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const email = document.getElementById('emailInput').value.trim();
            await unlockSlides(email);
        });

        document.addEventListener('click', (e) => {
            if (slidesUnlocked && !e.target.closest('form')) {
                current++;
                updateSlides();
            }
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight') nextSlide();
            if (e.key === 'ArrowLeft') prevSlide();
        });

        function nextSlide() {
            if (!slidesUnlocked && current === 0) return;
            if (current < slides.length - 1) {
                current++;
                updateSlides();
            }
        }

        function prevSlide() {
            if (current > 0) {
                current--;
                updateSlides();
            }
        }

        updateSlides();
    </script>


